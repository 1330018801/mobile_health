<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.seimun.mobile_health.Hypertension_follow_up"
    tools:showIn="@layout/activity_hypertension_follow_up">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务类别：高血压患者健康管理"
        android:id="@+id/textView85"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView85"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:text="服务项目;第一次随访"
        android:id="@+id/textView86"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随访日期;2015-09-15"
            android:id="@+id/textView87"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随访方式：家庭"
            android:id="@+id/textView88"
            android:layout_toRightOf="@id/textView87"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView87"
            android:layout_marginTop="5dp"
            android:text="症状：心悸胸闷 四肢发麻"
            android:id="@+id/textView89"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView89"
            android:layout_marginTop="5dp"
            android:text="此次随访分类：控制不满意"
            android:id="@+id/textView90"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView90"
            android:layout_marginTop="5dp"
            android:text="转诊建议：有"
            android:id="@+id/textView91"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView90"
            android:layout_toRightOf="@+id/textView91"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:text="原因：控制不满意"
            android:id="@+id/textView92"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView91"
            android:layout_marginTop="5dp"
            android:text="转诊机构及科室：三河市卫生院心内科"
            android:id="@+id/textView93"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView93"
            android:layout_marginTop="5dp"
            android:text="下次随访日期：2015-11-15"
            android:id="@+id/textView94"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体征"
            android:id="@+id/textView95"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="血压：96/152mm/Hg"
            android:id="@+id/textView96"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="体重（kg）：87/85"
            android:id="@+id/textView97"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="体质指数：27/26"
            android:id="@+id/textView98"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="心率：87次/分"/>
    </LinearLayout>


</LinearLayout>
    </ScrollView>