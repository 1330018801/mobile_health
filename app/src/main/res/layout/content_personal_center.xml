<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#00B2EE"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_personal_center"
    tools:context="com.seimun.mobile_health.PersonalCenterActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_archies"
        android:gravity="center"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:drawableLeft="@mipmap/archives"
        android:drawableRight="@mipmap/right"
        android:background="#ffffff"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_services"
        android:gravity="center"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@mipmap/archives"
        android:drawableRight="@mipmap/right"
        android:layout_marginTop="15dp"
        android:background="#ffffff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的家庭"
        android:gravity="center"
        android:id="@+id/textView6"
        android:drawableLeft="@mipmap/archives"
        android:layout_below="@+id/textView5"
        android:drawableRight="@mipmap/right"
        android:layout_marginTop="15dp"
        android:background="#ffffff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置"
        android:drawableLeft="@mipmap/archives"
        android:drawableRight="@mipmap/right"
        android:gravity="center"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="15dp"
        android:background="#ffffff"/>


</RelativeLayout>
